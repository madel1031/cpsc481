<UserControl x:Class="uOrder.ReceiptPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uOrder"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">
    <Grid>
        <StackPanel>

            <Label FontSize="24" Content="RECEIPT" FontWeight="Bold" Margin="8,0,834,0" />
            <ScrollViewer Height="560"  Width="920" VerticalScrollBarVisibility="Hidden">
                <StackPanel>

                </StackPanel>
            </ScrollViewer>
            <Label Content="Subtotal: $0.00" FontSize="14" Margin="818,15,15,0" HorizontalContentAlignment="Right"/>
            <Label Content="GST: $0.00" FontSize="14" Margin="818,0,15,0" HorizontalContentAlignment="Right"/>
            <Label Content="Total: $0.00" FontSize="20" Margin="818,0,15,0" HorizontalContentAlignment="Right"/>
            <Button Name="pay" Content="Pay Now" Height="40" Margin="775,0,15,0" FontSize="22" VerticalContentAlignment="Center" Click="pay_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
